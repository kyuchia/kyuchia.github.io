doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description", content="")
    meta(name="author", content="Yu Chia Kuo")
    base(href="https://kyuchia.github.io/")
    title Yu Chia Kuo ㅣ 郭又嘉
    link(rel="icon", type="image/x-icon", href="assets/favicon.ico")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css", rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700", rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic", rel="stylesheet", type="text/css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css", rel="stylesheet")
    link(href="css/styles.css", rel="stylesheet")

  body#page-top
    // Navbar
    nav.navbar.navbar-expand-lg.fixed-top.py-3.custom-navbar#mainNav
      .container.px-4.px-lg-5
        a.navbar-brand(href="index.html")
          strong Yu Chia Kuo
          br
          small 郭又嘉
        button.navbar-toggler.navbar-toggler-right(type="button", data-bs-toggle="collapse", data-bs-target="#navbarResponsive", aria-controls="navbarResponsive", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarResponsive
          ul.navbar-nav.ms-auto.my-2.my-lg-0
            li.nav-item: a.nav-link(href="./") Home
            li.nav-item: a.nav-link(href="about/") About
            li.nav-item: a.nav-link(href="portfolio/") Art Portfolio
            li.nav-item: a.nav-link(href="research/") Research
            li.nav-item: a.nav-link(href="https://www.youtube.com/channel/UCFdI5R6o6_9YCIt56tPUfcg", target="_blank")
              i.bi.bi-youtube
            li.nav-item: a.nav-link(href="https://github.com/kyuchia", target="_blank")
              i.bi.bi-github
            li.nav-item: a.nav-link(href="https://www.linkedin.com/in/yu-chia-kuo-b45307237", target="_blank")
              i.bi.bi-linkedin
            li.nav-item: a.nav-link(href="mailto:kuodmusic@gmail.com")
              i.bi.bi-envelope-fill

    // Header
    header.masthead.mb-5
      .container.px-4.px-lg-5.h-100.text-center
        .row.gx-4.gx-lg-5.h-100.align-items-center.justify-content-center
          .col-lg-8
            div(style="height: 200px;")
            a.btn.btn-outline-custom.btn-xl(href="#about") View More

    // Portfolio Section
    #portfolio.pt-5.pb-5.mb-5
      .container-fluid
        .px-4
          .row.g-4
            each item in [
              { href: 'project-treerings.html', img: 'https://i.imgur.com/GnpagWA.jpg', title: 'Tree Rings | Dome', category: 'Performance' },
              { href: 'project-seascape.html', img: 'https://i.imgur.com/UsJVq1s.jpg', title: 'Seascape Serenity', category: 'Sound Design' },
              { href: 'project-gravity.html', img: 'https://i.imgur.com/3vm1PBA.jpg', title: 'The Gravity Realm', category: 'Sound Design' },
              { href: 'project-immersi.html', img: 'https://i.imgur.com/8cj3emE.jpg', title: 'Immersi Topia', category: 'Creative Tech' },
              { href: 'project-diving.html', img: 'https://i.imgur.com/r6dOzvs.jpg', title: 'Diving', category: 'Creative Tech' },
              { href: 'project-kombucha.html', img: 'https://i.imgur.com/Q2ALTrf.jpg', title: 'Fluctuations of Kombucha', category: 'Sound Design' }
            ]
              .col-lg-4.col-md-6.col-sm-12.portfolio-item(data-category=item.category)
                a(href="portfolio/" + item.href)
                  .portfolio-image-wrapper
                    img(src=item.img, alt=item.title)
                  .portfolio-caption
                    strong= item.title

    // Footer
    footer.custom-footer.pt-5.pb-4.mt-5
      .container.text-center
        a(href="https://www.youtube.com/channel/UCFdI5R6o6_9YCIt56tPUfcg", target="_blank")
          i.bi.bi-youtube.mx-2
        a(href="https://github.com/kyuchia", target="_blank")
          i.bi.bi-github.mx-2
        a(href="https://www.linkedin.com/in/yu-chia-kuo-b45307237", target="_blank")
          i.bi.bi-linkedin.mx-2
        a(href="mailto:kuodmusic@gmail.com")
          i.bi.bi-envelope-fill.mx-2

    // Scripts
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.js")
    script(src="js/scripts.js")
